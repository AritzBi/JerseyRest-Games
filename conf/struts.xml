<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <constant name="struts.devMode" value="true" />
    <package name="default" extends="struts-default">
		<default-interceptor-ref name="paramsPrepareParamsStack"/>

        <action name="doLogin" class="es.deusto.gamesubscription.actions.LoginAction">
            <result>/jsp/index.jsp</result>
        </action>
        
        <action name="games" class="es.deusto.gamesubscription.actions.GamesAction" method="listing">
        	<result>/jsp/games.jsp</result>
        </action>
        
        <action name="searchGame" class="es.deusto.gamesubscription.actions.GamesAction" method="getGame">
        	<result>/jsp/games.jsp</result>
        </action>
        
        <action name="insertGame" class="es.deusto.gamesubscription.actions.GamesAction" method="insert">
        	<result>/jsp/games.jsp</result>
        </action>
        
        <action name="*" >
			<result>/jsp/{1}.jsp</result>
		</action>
        
    </package>
    <!-- Add packages here -->

</struts>
